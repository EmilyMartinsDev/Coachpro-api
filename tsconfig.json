{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./src/@types"],  
  },
  "include": ["src/**/*", "LEGADO/services", "LEGADO/schemas", "LEGADO/middlewares", "LEGADO/controllers", "LEGADO/routes", "LEGADO/middlewares"],
  "exclude": ["node_modules"]
}